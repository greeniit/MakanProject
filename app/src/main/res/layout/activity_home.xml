<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#00336d"
        app:headerLayout="@layout/nav_header_main">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="250dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/packages"
                android:layout_marginStart="18dp"
                android:textSize="18dp"
                android:textColor="#009688"
                android:layout_marginBottom="10dp"/>


            <LinearLayout
                android:id="@+id/ll_proffesionalPackage"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#35599b">

                <ImageView
                    android:id="@+id/im_proffesionalpackage"
                    android:layout_width="@dimen/width_24dp"
                    android:layout_height="@dimen/height_24dp"
                    android:layout_marginStart="10dp"
                    android:tint="#F3F0F0"
                    android:layout_gravity="center"
                    android:src="@drawable/suitcase"/>

                <TextView
                    android:id="@+id/tv_proffesionalpackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:paddingStart="@dimen/paddingstart_12dp"
                    android:text="@string/proffesionalpackage"
                    android:textSize="@dimen/textSize14sp"/>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="bottom"
                android:background="#FFFFFF" />


            <LinearLayout
                android:id="@+id/ll_agency_Package"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#35599b">

                <ImageView
                    android:id="@+id/im_dealerpackage"
                    android:layout_width="@dimen/width_24dp"
                    android:layout_height="@dimen/height_24dp"
                    android:layout_marginStart="10dp"
                    android:tint="#F3F0F0"
                    android:layout_gravity="center"
                    android:src="@drawable/suspiciousman"/>

                <TextView
                    android:id="@+id/tv_dealerpackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#FFFFFF"
                    android:paddingStart="@dimen/paddingstart_12dp"
                    android:text="@string/dealerpackage"
                    android:textSize="@dimen/textSize14sp"/>



            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shortcuts"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:textColor="#009688"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_navigationDrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|start">
            </android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/socialnetwork"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="18dp"
                    android:textColor="#009688"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#35599b">

                    <ImageView
                        android:id="@+id/im_facebook"
                        android:layout_width="@dimen/width_24dp"
                        android:layout_height="@dimen/height_24dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/faceboook"/>

                    <TextView
                        android:id="@+id/tv_facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:paddingStart="@dimen/paddingstart_12dp"
                        android:text="@string/facebook"
                        android:textSize="@dimen/textSize14sp"/>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="bottom"
                    android:background="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#35599b">

                    <ImageView
                        android:id="@+id/im_snapchat"
                        android:layout_width="@dimen/width_24dp"
                        android:layout_height="@dimen/height_24dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/snaaapchat"/>

                    <TextView
                        android:id="@+id/tv_snapchat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:paddingStart="@dimen/paddingstart_12dp"
                        android:text="@string/snapchat"
                        android:textSize="@dimen/textSize14sp"/>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="bottom"
                    android:background="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#35599b">

                    <ImageView
                        android:id="@+id/im_instagram"
                        android:layout_width="@dimen/width_24dp"
                        android:layout_height="@dimen/height_24dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/instaaagram"/>

                    <TextView
                        android:id="@+id/tv_instagram"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:paddingStart="@dimen/paddingstart_12dp"
                        android:text="@string/instagram"
                        android:textSize="@dimen/textSize14sp"/>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="bottom"
                    android:background="#FFFFFF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#35599b">

                    <ImageView
                        android:id="@+id/im_linkedin"
                        android:layout_width="@dimen/width_24dp"
                        android:layout_height="@dimen/height_24dp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/linnnkedin"/>

                    <TextView
                        android:id="@+id/tv_linkedin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="#FFFFFF"
                        android:paddingStart="@dimen/paddingstart_12dp"
                        android:text="@string/linkedin"
                        android:textSize="@dimen/textSize14sp"/>



                </LinearLayout>




            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="3"
                android:visibility="gone"
                android:layout_margin="@dimen/margin_10dp">


                <ImageView
                    android:id="@+id/iv_facebook"
                    android:layout_width="@dimen/width_50dp"
                    android:layout_height="@dimen/height_50dp"
                    android:src="@drawable/facebook"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/iv_instagram"
                    android:layout_width="@dimen/width_50dp"
                    android:layout_height="@dimen/height_50dp"
                    android:src="@drawable/instagram"
                    android:layout_weight="1"/>


                <ImageView
                    android:id="@+id/iv_twitter"
                    android:layout_width="@dimen/width_50dp"
                    android:layout_height="@dimen/height_50dp"
                    android:src="@drawable/twitter"
                    android:layout_weight="1"/>






            </LinearLayout>

            </LinearLayout>


        </ScrollView>










    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>