<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_backdrop_height"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <ImageView
                        android:id="@+id/ivMain"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image_4" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivGallery"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_margin="@dimen/card_margin"
                            android:padding="@dimen/card_margin"
                            android:src="@drawable/image_gallery" />

                    </RelativeLayout>

                </FrameLayout>


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/album_title_padding"
                        android:paddingTop="@dimen/album_title_padding">


                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ivThumbnail"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/album_title_padding"
                            android:layout_marginRight="@dimen/album_title_padding"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:text="Luxury Homes"
                            android:textAppearance="@android:style/TextAppearance.Large"
                            android:textColor="@color/album_title" />

                        <RelativeLayout
                            android:id="@+id/llLocationHolder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvTitle"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/album_title_padding"
                            android:layout_marginRight="@dimen/album_title_padding">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_toLeftOf="@+id/tvAddress"
                                android:gravity="center"
                                android:src="@drawable/ic_place_black_18dp" />

                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="2dp"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:maxLines="1"
                                android:paddingBottom="@dimen/songs_count_padding_bottom"
                                android:text="Um Al Ghawarif St, Salalah Oman"
                                android:textAppearance="@android:style/TextAppearance.Small" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="5dp"
                            android:drawableLeft="@drawable/ic_price_18dp"
                            android:gravity="center"
                            android:text=" 5000 OMR"
                            android:textAppearance="@android:style/TextAppearance.Medium"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E0E0E0"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llLocationHolder"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivBed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_bed_18dp" />

                                <TextView
                                    android:id="@+id/tvBed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toEndOf="@+id/ivBed"
                                    android:gravity="center"
                                    android:text="3 Bedrooms"
                                    android:textSize="12sp" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivBathroom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_bed_18dp" />

                                <TextView
                                    android:id="@+id/tvBathroom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toEndOf="@+id/ivBathroom"
                                    android:gravity="center"
                                    android:text="3 Bathrooms"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivArea"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/ic_area_18dp" />

                                <TextView
                                    android:id="@+id/tvArea"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_toEndOf="@+id/ivArea"
                                    android:gravity="center"
                                    android:text="6000 Sqft"
                                    android:textSize="12sp" />

                            </RelativeLayout>


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="@dimen/activity_horizontal_margin">

                            <LinearLayout
                                android:id="@+id/llMapView"
                                android:background="@null"
                                android:layout_marginRight="10dp"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/btnBookNow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/map"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                    android:textColor="@color/colorAccent"
                                    android:text="Map View"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/btnBookNow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@color/colorPrimaryDark"
                                android:text="Book Now"
                                android:textAppearance="@android:style/TextAppearance.Small"
                                android:textColor="@android:color/white" />
                        </RelativeLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin">

                    <LinearLayout
                        android:id="@+id/llNearbyItemsHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@+id/btnBookNow"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/card_margin"
                        android:paddingTop="@dimen/card_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivAirport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/airport"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivAtm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/atm1"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivBank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/bank"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivBusStation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/bus_station1"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivHospital"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/hospital"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivMall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/mall"
                                android:visibility="gone" />


                            <ImageView
                                android:id="@+id/ivMosque"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/mosque"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivPark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/park"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivPetrolPump"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/petrol_pumb"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivSchool"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/school"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/ivStore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/card_margin"
                                android:layout_marginRight="@dimen/card_margin"
                                android:src="@drawable/store"
                                android:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPropertyType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/activity_vertical_margin"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin" />

                        <TextView
                            android:id="@+id/tvDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_vertical_margin"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/llDealerSummaryHolder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="Posted by:"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ivThumbnail"
                                android:layout_width="130dp"
                                android:layout_height="140dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:scaleType="fitXY"
                                android:src="@drawable/image_2" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_toEndOf="@+id/ivThumbnail"
                                android:orientation="vertical">

                                <TextView
                                    android:maxLines="1"
                                    android:id="@+id/tvDealerName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:ellipsize="end"
                                    android:gravity="left"
                                    android:text="Dealer Name"
                                    android:textAppearance="@android:style/TextAppearance.Large"
                                    android:textColor="@color/album_title" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">

                                    <ImageView
                                        android:id="@+id/ivLocation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_place_black_18dp" />

                                    <TextView
                                        android:maxLines="1"
                                        android:id="@+id/tvDealerAddress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:layout_marginRight="2dp"
                                        android:layout_toRightOf="@+id/ivLocation"
                                        android:ellipsize="end"
                                        android:paddingBottom="@dimen/songs_count_padding_bottom"
                                        android:text="Um Al Ghawarif St, Salalah Oman"
                                        android:textAppearance="@android:style/TextAppearance.Small" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">

                                    <ImageView
                                        android:id="@+id/ivDealerEmail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_mail_outline_black_24dp" />

                                    <TextView
                                        android:maxLines="1"
                                        android:id="@+id/tvDealerEmail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginRight="2dp"
                                        android:layout_toRightOf="@+id/ivDealerEmail"
                                        android:ellipsize="end"
                                        android:paddingBottom="@dimen/songs_count_padding_bottom"
                                        android:text="dealer@gmail.com"
                                        android:textAppearance="@android:style/TextAppearance.Small" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp">

                                    <ImageView
                                        android:id="@+id/ivDealerWebsite"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_public_black_24dp" />

                                    <TextView
                                        android:maxLines="1"
                                        android:id="@+id/tvDealerWebsite"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginRight="2dp"
                                        android:layout_toRightOf="@+id/ivDealerWebsite"
                                        android:ellipsize="end"
                                        android:paddingBottom="@dimen/songs_count_padding_bottom"
                                        android:text="www.dealer.com"
                                        android:textAppearance="@android:style/TextAppearance.Small" />

                                </RelativeLayout>

                            </LinearLayout>


                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/card_margin"
                    android:layout_marginLeft="@dimen/card_margin"
                    android:layout_marginRight="@dimen/card_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="@dimen/activity_horizontal_margin"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="Similar Property"
                                android:textAppearance="@android:style/TextAppearance.Small"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvShowAllFeaturedProperty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingBottom="2dp"
                                android:paddingTop="2dp"
                                android:text="Show All"
                                android:textAppearance="@android:style/TextAppearance.Small"
                                android:textColor="@color/colorAccent" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginBottom="4dp"
                            android:background="#FCE4EC" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvSimilarProperty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/layout_progress" />
</FrameLayout>
