<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Sign Up"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/white"
                    android:textSize="27sp" />


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/ivPickImage"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_below="@+id/tvTitle"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:src="@drawable/ic_camera" />

                            <RelativeLayout
                                android:id="@+id/llNameHolder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivPickImage"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/user"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/etName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@id/ivName"
                                    android:background="@null"
                                    android:hint="Name"
                                    android:inputType="textCapWords"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@android:color/white"
                                    android:textColorHint="@android:color/white" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_alignStart="@+id/etName"
                                    android:layout_below="@+id/etName"
                                    android:layout_marginRight="10dp"
                                    android:background="@android:color/white" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/llEmailHolder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/llNameHolder"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/mail"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/etEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@id/ivEmail"
                                    android:background="@null"
                                    android:hint="Email"
                                    android:inputType="textEmailAddress"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@android:color/white"
                                    android:textColorHint="@android:color/white" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_alignStart="@+id/etEmail"
                                    android:layout_below="@+id/etEmail"
                                    android:layout_marginRight="10dp"
                                    android:background="@android:color/white" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/llPhoneHolder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/llEmailHolder"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/password"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/etPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@id/ivPhone"
                                    android:background="@null"
                                    android:hint="Phone"
                                    android:inputType="phone"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@android:color/white"
                                    android:textColorHint="@android:color/white" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_alignStart="@+id/etPhone"
                                    android:layout_below="@+id/etPhone"
                                    android:layout_marginRight="10dp"
                                    android:background="@android:color/white" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/llPasswordHolder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/llEmailHolder"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/activity_vertical_margin"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ivPassword"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/password"
                                    android:visibility="gone" />

                                <EditText
                                    android:id="@+id/etPassword"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_toRightOf="@id/ivPassword"
                                    android:background="@null"
                                    android:hint="Password"
                                    android:inputType="textPassword"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@android:color/white"
                                    android:textColorHint="@android:color/white" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_alignStart="@+id/etPassword"
                                    android:layout_below="@+id/etPassword"
                                    android:layout_marginRight="10dp"
                                    android:background="@android:color/white" />
                            </RelativeLayout>




                        </LinearLayout>

                        <Button
                            android:id="@+id/btnLogin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:layout_marginTop="10dp"
                            android:background="@color/colorPrimary"
                            android:text="Sign Up"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvSignIn"
                            android:textColor="@android:color/white"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:text="Already have an account? Sign In"
                            android:textAppearance="@android:style/TextAppearance.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>

</LinearLayout>