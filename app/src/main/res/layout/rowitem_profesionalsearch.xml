<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/ll_productcategory_main"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/white"
android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginbottom_01dp"
        android:layout_marginEnd="@dimen/marginend_01dp"
            android:layout_marginTop="@dimen/margintop_01dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/cv_ImageHolder"
            android:layout_width="@dimen/width_100dp"
            android:layout_height="@dimen/height_100dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/cornerRadius_50dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_height="@dimen/height_80dp"
                android:layout_width="@dimen/width_80dp"
                android:id="@+id/ivProfessionalImage"
                android:scaleType="fitXY"
                android:src="@drawable/icon_deal"
                android:layout_gravity="center"/>
        </android.support.v7.widget.CardView>



        <TextView
            android:id="@+id/ivProfessionalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/padding_5dp"
            android:text="TextView"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>

